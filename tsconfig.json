{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"outDir": "dist",
		"module": "commonjs",
		"target": "es6",
		"baseUrl": ".",
		"moduleResolution": "node",
		"paths": {
			"@models/*": ["src/models/*"],
			"@controllers/*": ["src/controllers/*"]
		}
	},

	"include": ["./src/**/*.ts"]
}
